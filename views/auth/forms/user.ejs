<!DOCTYPE html>
<html>
  <%- include('../../components/head') -%>
  <link rel="stylesheet" type="text/css" href="/stylesheets/landing.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css" />
  <body>
    <%- include('../../components/navbar') -%>
    <div class="landing-main">
      <!-- Banner -->
      <section id="banner">
        <div class="inner">
          <h2 class="major special">
            <span class="landing-headline">
              Tell us more about you!
            </span>
          </h2>
          <ul class="actions special stacked">
            <li>
              <div class="container">
                <div class="row">
                  <div class="col-md-7 col-sm-12 col-xs-12" style="margin: auto;">
                    <form action="/account/new/user/info" method="POST">
                      <h3 style="color: black; text-align: left;">GENERAL</h3>
                      <div class="form-group">
                        <label for="phone">Phone*</label>
                        <input type="tel" class="form-control" id="phone" placeholder="xxxxxxxxxx" name="phone" pattern="[0-9]{10}" required />
                      </div>
                      <div class="form-group">
                          <label for="birthDate">DOB*</label>
                          <input type="month" name="birthDate" class="form-control" id="birthDate" required />
                        </div>
                      <h3 style="color: black; text-align: left; margin-top: 40px;">
                        LOCATION
                      </h3>
                      <div class="form-group">
                        <label for="address">Address*</label>
                        <input type="text" class="form-control" id="address" placeholder="Enter your address" name="address" required />
                      </div>
                      <div class="form-row">
                        <div class="form-group col-md-6">
                          <label for="city">City*</label>
                          <input type="text" name="city" class="form-control" id="city" placeholder="City" required />
                        </div>
                        <div class="form-group col-md-6">
                          <label for="postalCode">Postal Code*</label>
                          <input type="text" name="postalCode" class="form-control" id="postalCode" placeholder="Postal Code" required />
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="region">Region*</label>
                        <input type="text" name="region" class="form-control" id="region" placeholder="Region (eg. CA)" required />
                      </div>

                      <h3 style="color: black; text-align: left; margin-top: 40px;">
                        12th Grade
                      </h3>
                      <div class="form-group">
                        <div class="field_wrapper1">
                          <div>
                            <label for="institution">Institution*</label>
                            <input type="text" id="institution" class="form-control" placeholder="University/School Name" name="institution[]" required / >
                          </div>
                          <br />
                          <div class="form-row">
                            <div class="form-group col-md-6">
                              <label for="startDate">From*</label>
                              <input type="month" name="startDate" class="form-control" id="startDate" required />
                            </div>
                            <div class="form-group col-md-6">
                              <label for="endDate">To*</label>
                              <input type="month" name="endDate" class="form-control" id="endDate" required />
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="percentage">Percentage*</label>
                            <input type="number" class="form-control" id="percentage" placeholder="Enter your %" name="percentage" min="0" max="100" step="0.01" required />
                          </div>
                        </div>
                      </div>

                      <h3>Slot</h3>
                      <div class="form-group">
                        <label for="slot">Slot*</label>
                        <select name="slot" id="slot">
                          <% for(let i = 7; i<= 20; i++) {%>
                            <option value="<%=i %>"><%= i %>:00</option>
                          <% } %>
                        </select>
                      </div>

                      <button id="submitButton" type="submit" class="button primary btn btn-primary">
                        Submit
                      </button>
                      <button type="reset" class="button btn btn-danger">
                        Reset
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </section>
    </div>
    <div id="notify_message" class="notify_message-success"></div>
    <%- include('../../components/footer') -%>
  </body>

  <script src="/javascripts/vendor/breakpoints.min.js"></script>
  <script src="/javascripts/vendor/browser.min.js"></script>
  <script src="/javascripts/vendor/classie.js"></script>
  <script src="/javascripts/vendor/main.js"></script>
  <script src="/javascripts/vendor/jquery.scrolly.min.js"></script>
  <script src="/javascripts/util.js"></script>
</html>
