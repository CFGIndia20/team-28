<!DOCTYPE html>
<html>
  <%- include('../components/head') -%>
  <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css" />
  <body>
    <%- include('../components/navbar') -%>
    <div id="mainPage" style="height: 100%;">
      <%- include('../components/sidebar') -%>
      <div class="column col-xs-12 col-sm-9 col-lg-10" style="margin: auto;" id="main">
        <div class="row">
          <div class="col-md-12 align-center">
            <form action="/admin/create/teacher" method="post">
              <div class="gram-card">
                <div class="gram-card-header">
                  <img src="<%= user.general.picture %>" class="gram-card-user-image" />
                  <a class="gram-card-user-name" href="/users/<%= user.usertype %>/@<%= user.username %>"><%= user.username %></a>
                </div>
                <br />
                <br />
                <div class="gram-card-content">
                  <p>
                    <br />
                    <input class="form-control" id="name" type="text" name="name" placeholder="Instructor name" required />
                    <br>
                    <input class="form-control" id="email" type="email" name="email" placeholder="Instructor email" required />
                    <br>
                    <input class="form-control" id="dob" type="date" name="dob" required />
                    <br>
                    <br>
                    Phone Number
                    <input type="tel" class="form-control" id="phone" placeholder="xxxxxxxxxx" name="phone" pattern="[0-9]{10}" required />
                    <br>
                    Address
                    <br>
                    <input type="text" class="form-control" placeholder="Address" id="address" name="address" required />
                    <br>
                    <input type="text" class="form-control" placeholder="Postal Code" id="postalCode" name="postalCode" required />
                    <br>
                    <input type="text" class="form-control" placeholder="City" id="city" name="city" required />
                    <br>
                    <input type="text" class="form-control" id="region" placeholder="Region" name="region" required />
                    <br>
                    Gender
                    <select class="form-control" name="gender" style="margin-top: 2%;" required>
                      <option>Male</option>
                      <option>Female</option>
                      <option>Other</option>
                    </select>
                    <br>
                    Shift <input type="radio" name="shift" value="morning"><input type="radio" name="shift" value="afternoon">
                  </p>
                  <br />
                  <hr />
                </div>
                <div class="gram-card-footer">
                  <button class="footer-action-icons btn btn-primary float-right" style="margin-right: 2%;"><i class="glyphicon glyphicon-file-invoice"></i> Post</button>
                  <p style="margin: 0;">By posting you agree to the <a href="/terms">terms and conditions</a></p>
                </div>
              </div>
              <br />
              <br />
            </form>
          </div>
        </div>
      </div>
    </div>
    <div id="notify_message" class="notify_message-success"></div>
    <%- include('../components/footer') %> <%- include('../components/tabs') -%>
  </body>
  <script type="text/javascript">
    show_notification('Register a trainer !', 'success')
  </script>
</html>
